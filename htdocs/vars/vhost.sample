<VirtualHost *:80>
    ServerName solitaire.local
    ServerAlias api.solitaire.local

    # Assurez vous du nom du dossier dans lequel r√©side vos fichiers PHP (ici solitaire)
    DocumentRoot "${INSTALL_DIR}/www/solitaire"

    <Directory "${INSTALL_DIR}/www/solitaire">
        Options +Indexes +Includes +FollowSymLinks + MultiViews
        AllowOverride All
        Allow from all
        FallbackResource /index.php
    </Directory>
</VirtualHost>